@model Vehicles.API.Models.HistoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>History</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddHistory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />

            <partial name="_History" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="DetailsVehicle" asp-route-id="@Model.VehicleId" class="btn btn-success">Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
