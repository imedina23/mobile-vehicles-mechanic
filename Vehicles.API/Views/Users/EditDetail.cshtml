@model Vehicles.API.Models.DetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Detalle de History</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HistoryId" />

            <partial name="_Detail" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="DetailHistory" asp-route-id="@Model.HistoryId" class="btn btn-success">Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
